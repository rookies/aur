pkgname=gimagereader
pkgver=0.9.1
pkgrel=1
pkgdesc="A graphical GTK frontend to tesseract-ocr"
arch=('any')
url="http://sourceforge.net/projects/gimagereader/"
license=('GPL')
depends=('gtk2' 'tesseract' 'python2' 'python2-gtkspell' 'pygtk' 'python2-cairo' 'imagemagick' 'python2-pyenchant' 'python2-poppler' 'python2-imaging')
source=(
  "http://downloads.sourceforge.net/gimagereader/${pkgname}-${pkgver}.tar.gz"
)
sha256sums=(
  '1276fd7ec1f8bb7453c5c70e9be6f0c3b8b899cbe6c43b4bf327be6ae85bb86a'
)

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --prefix=/usr --root="${pkgdir}"
}
